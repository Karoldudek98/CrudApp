<Window x:Class="CrudApp.AddEditZamowieniaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Zamowienia" Width="400" Height="350">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="ID:"/>
            <TextBox Text="{Binding ID}" IsEnabled="{Binding IsNew}" />
            <Label Content="KlientID:"/>
            <TextBox Text="{Binding KlientID}" />
            <Label Content="DataZamowienia:"/>
            <TextBox Text="{Binding DataZamowienia}" />
            <Button Content="Save" Click="Save_Click" Margin="0,10,0,0"/>
            <Button Content="Cancel" Click="Cancel_Click" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
