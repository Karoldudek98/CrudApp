<Window x:Class="CrudApp.AddEditKlienciWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Klienci" Width="400" Height="350">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="ID:"/>
            <TextBox Text="{Binding ID}" IsEnabled="{Binding IsNew}" />
            <Label Content="Imie:"/>
            <TextBox Text="{Binding Imie}" />
            <Label Content="Nazwisko:"/>
            <TextBox Text="{Binding Nazwisko}" />
            <Label Content="Email:"/>
            <TextBox Text="{Binding Email}" />
            <Button Content="Save" Click="Save_Click" Margin="0,10,0,0"/>
            <Button Content="Cancel" Click="Cancel_Click" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
